{
  "manifest_version": 2,
  "name": "MCP Thunderbird Extension",
  "version": "0.1",
  "description": "Access Thunderbird search index, send mails, manage calendar via experimental APIs",
  "applications": {
    "gecko": {
      "id": "mcp@example.com",
      "strict_min_version": "102.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "experiment_apis": {
    "searchIndex": {
      "schema": "experiments/search_index/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["messenger", "searchIndex"]],
        "script": "experiments/search_index/api.js",
        "events": ["startup"]
      }
    },
    "calendarMcp": {
      "schema": "experiments/calendar/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["messenger", "calendarMcp"]],
        "script": "experiments/calendar/api.js",
        "events": ["startup"]
      }
    },
    "contactsMcp": {
      "schema": "experiments/contacts/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["messenger", "contactsMcp"]],
        "script": "experiments/contacts/api.js",
        "events": ["startup"]
      }
    }
  },
  "permissions": [
    "accountsRead",
    "addressBooks",
    "messagesRead",
    "messagesMove",
    "messagesDelete",
    "accountsFolders",
    "compose"
  ]
}
